{
    "name": "wlrsilveira/laravel-boletos-bancos",
    "description": "Biblioteca para geração de boletos no Laravel",
    "keywords": [
        "boleto",
        "laravel",
        "pagamento"
    ],
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "neitanod/forceutf8": "^2.0",
        "setasign/fpdf": "^1.8",
        "chillerlan/php-qrcode": "^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "orchestra/testbench": "^4.0|^5.0|^6.0|^7.0|^8.0|^9.0",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload": {
        "psr-4": {
            "wlrsilveira\\LaravelBoletos\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "wlrsilveira\\LaravelBoletos\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "php-cs-fixer-check": "vendor/bin/php-cs-fixer fix --diff --verbose --dry-run",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --verbose"
    }
}
